.page {
  background-color: #F7F7F7;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  width: 100%;
}
.page .tab {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  text-align: center;
  width: 100%;
  height: 90rpx;
  color: #666666;
  box-sizing: border-box;
  border-bottom: 1px solid #dddddd;
  position: fixed;
  top: 0;
  z-index: 11;
  background-color: #fff;
}
.page .tab .tab_single {
  width: 62rpx;
  height: 62rpx;
  line-height: 62rpx;
  font-size: 26rpx;
  border-radius: 50% 50%;
  margin-top: 14rpx;
}
.page .tab .tab_active {
  color: #ffffff;
  background-color: #4fd1e4;
}
.page .tabCont {
  width: 100%;
  position: absolute;
  top: 90rpx;
  display: flex;
  flex-direction: column;
}
.page .tabCont .tabCont_single {
  width: 100%;
  height: 680rpx;
  position: relative;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  border-bottom: 10rpx solid #f7f7f7;
  background-color: #ffffff;
}
.page .tabCont .tabCont_single .tabCont_single_title {
  font-size: 30rpx;
  line-height: 30rpx;
  position: absolute;
  top: 40rpx;
  left: 20rpx;
  color: #222222;
  width: 300rpx;
}
.page .tabCont .tabCont_single .tabCont_single_author {
  font-size: 24rpx;
  color: #aaaaaa;
  position: absolute;
  left: 20rpx;
  top: 84rpx;
  width: 300rpx;
}
.page .tabCont .tabCont_single .tabCont_single_shouCang {
  width: 114rpx;
  height: 56rpx;
  color: #bbbbbb;
  border: 1px solid #bbbbbb;
  border-radius: 5px 5px;
  position: absolute;
  top: 42rpx;
  right: 20rpx;
  font-size: 24rpx;
  line-height: 56rpx;
  text-align: center;
}
.page .tabCont .tabCont_single .shouCang_active {
  border: 1px solid #4fd1e4;
  color: #4FD1E4;
}
.page .tabCont .tabCont_single .tabCont_single_face {
  width: 100%;
  height: 450rpx;
  position: absolute;
  top: 137rpx;
  left: 0;
}
.page .tabCont .tabCont_single .tabCont_single_face .tabCont_single_face_pic {
  width: 100%;
  height: 450rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.page .tabCont .tabCont_single .tabCont_single_face .tabCont_single_face_intro {
  color: #EA1E28;
  font-size: 30rpx;
  line-height: 30rpx;
  position: absolute;
  left: 100rpx;
  top: 388rpx;
  width: 630rpx;
  overflow: hidden;
  height: 30rpx;
  width: 620rpx;
  text-shadow: 1px 0px 0px #fff, -1px 0px 0px #fff, 0px 1px 0px #fff, 0px -1px 0px #fff;
}
.page .tabCont .tabCont_single .tabCont_single_look {
  position: absolute;
  right: 20rpx;
  top: 616rpx;
  height: 26rpx;
  line-height: 26rpx;
}
.page .tabCont .tabCont_single .tabCont_single_look .tabCont_single_look_pic {
  width: 26rpx;
  height: 18rpx;
  display: inline-block;
}
.page .tabCont .tabCont_single .tabCont_single_look .tabCont_single_look_num {
  font-size: 26rpx;
  color: #bfbfbf;
  display: inline-block;
  margin-left: 6rpx;
}
.page .tabCont .tabCont_single .tabCont_single_update {
  display: block;
  font-size: 24rpx;
  line-height: 26rpx;
  color: #aaaaaa;
  position: absolute;
  top: 618rpx;
  left: 20rpx;
  width: 430rpx;
}
.page .tabCont .tabCont_single:nth-last-child(1) {
  border: none;
}
.page .noGengXin {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 50%;
  font-size: 30rpx;
  color: #999999;
}
