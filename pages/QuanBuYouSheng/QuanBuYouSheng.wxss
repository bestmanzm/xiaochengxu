.page {
  border-top: 1px solid #f1f1f1;
  position: absolute;
  bottom: 160rpx;
  width: 100%;
  top: 0;
  overflow-y: auto;
}
.page .single {
  margin-top: 40rpx;
  position: relative;
  width: 206rpx;
  height: 340rpx;
}
.page .single .single_pic {
  width: 205rpx;
  height: 280rpx;
}
.page .single .single_name {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 205rpx;
  height: 30rpx;
  font-size: 30rpx;
  line-height: 30rpx;
}
.page .single:nth-child(3n+1) {
  float: left;
  margin-left: 30rpx;
}
.page .single:nth-child(3n+2) {
  float: left;
  margin-left: 35rpx;
}
.page .single:nth-child(3n+3) {
  float: right;
  margin-right: 30rpx;
}
.bot {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 160rpx;
}
.bot .bot_l {
  width: 145rpx;
  height: 40rpx;
  position: absolute;
  left: 60rpx;
  top: 50%;
  transform: translateY(-50%);
}
.bot .bot_l .bot_l_circle {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 1px solid #b0b0b0;
  position: absolute;
  top: 0;
  left: 0;
}
.bot .bot_l .bot_l_circle .bot_l_circle_pic {
  position: absolute;
  width: 15rpx;
  height: 26rpx;
  left: 50%;
  margin-left: -5rpx;
  margin-top: 7rpx;
  transform: rotateZ(180deg);
}
.bot .bot_l .bot_l_font {
  color: #999999;
  font-size: 26rpx;
  line-height: 40rpx;
  position: absolute;
  left: 54rpx;
}
.bot .bot_mid {
  width: 240rpx;
  height: 60rpx;
  border: 1px solid #aaaaaa;
  border-radius: 7px 7px;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 50%;
  margin-left: -120rpx;
  font-size: 26rpx;
  color: #999999;
  line-height: 60rpx;
  text-align: center;
}
.bot .bot_r {
  width: 145rpx;
  height: 40rpx;
  position: absolute;
  right: 60rpx;
  top: 50%;
  transform: translateY(-50%);
}
.bot .bot_r .bot_r_circle {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 1px solid #b0b0b0;
  position: absolute;
  top: 0;
  right: 0;
}
.bot .bot_r .bot_r_circle .bot_r_circle_pic {
  position: absolute;
  width: 15rpx;
  height: 26rpx;
  left: 50%;
  margin-left: -6rpx;
  margin-top: 7rpx;
}
.bot .bot_r .bot_r_font {
  color: #999999;
  font-size: 26rpx;
  line-height: 40rpx;
  position: absolute;
  right: 54rpx;
}
.bot .addcolor .bot_r_font {
  color: #ff7833;
}
.bot .addcolor .bot_r_circle {
  border: 1px solid #ff7833;
}
.bot .addcolorOne .bot_l_font {
  color: #ff7833;
}
.bot .addcolorOne .bot_l_circle {
  border: 1px solid #ff7833;
}
